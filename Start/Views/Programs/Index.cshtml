@model IEnumerable<Start.Models.Program>

@{
    ViewBag.Title = "Start Menu";
}

<div class="jumbotron" style="background-color:#02a8f2; color:#ffffff; text-align:center">
    <h1>Start Menu</h1>
    <p>Launch your Start Menu programs from the Web!</p>

</div>

<div>
    <form action="/Programs/Search" method="post" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="row">
            <div class="col-md-2"></div>
            <div class="input-group col-md-8" style="width: 100%; margin-top: 32px; margin-bottom: 32px">
                <input type="text" class="form-control" name="searchString" placeholder="Search for a Program">
                <div class="input-group-append">
                    <input type="submit" value="Search" class="btn" />
                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </form>

</div>

<div class="row">
    <div class="col-md-12">
        <form method="post" >
            <div class="row">
            @Html.AntiForgeryToken()
            @{
                foreach (var item in Model)
                {
                    var imageName = Path.GetFileName(@item.IconPath);

                    <div class="form-group col-md-2" style="height: 185px" >
                        <input type="image" src="/Images/@imageName" alt="Submit" class="form-control" id="Link" name="execute" value="@item.Title" style="color: black; height: 70px; width: auto; border: none" />
                        <label for="Link">@item.Title</label>
                        <label for="Link" style="display: block; background-color: lightgray; width: 70%">Run Count: @item.Count</label>
                    </div>
                }
            }
            </div>
        </form>
    </div>
</div>